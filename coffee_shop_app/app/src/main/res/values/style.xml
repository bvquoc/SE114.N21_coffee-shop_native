<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyToolbarTitle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">@dimen/font18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blueRipple</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>