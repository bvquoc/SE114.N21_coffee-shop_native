<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/grey_border"/>
                    <padding
                        android:right="8dp"
                        android:left="16dp"
                        android:top="8dp"
                        android:bottom="8dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_arrow_down_24"
                android:gravity="end|center_vertical"
                android:width="24dp"/>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/black"/>
                    <padding
                        android:right="8dp"
                        android:left="16dp"
                        android:top="8dp"
                        android:bottom="8dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_arrow_up_24"
                android:gravity="end|center_vertical"
                android:width="24dp"/>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1AA6A6B0"/>
                    <stroke
                        android:width="1dp"
                        android:color="#33A6A6B0"/>
                    <padding
                        android:right="8dp"
                        android:left="16dp"
                        android:top="8dp"
                        android:bottom="8dp"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/id_arrow_down_disable_24"
                android:gravity="end|center_vertical"
                android:width="24dp"/>
        </layer-list>
    </item>
</selector>