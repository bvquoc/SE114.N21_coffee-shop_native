<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/imgView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="3:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp">
                <TextView
                    android:id="@+id/txtSb"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SB Han Thuyen"
                    style="@style/boldBlack16"
                    android:textSize="@dimen/_18sdp"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/_24sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/icon_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone_24"/>
                    <TextView
                        style="@style/regularBlack14"
                        android:id="@+id/fromTxt"
                        android:layout_toEndOf="@id/icon_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/so_dien_thoai"/>
                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_marginTop="@dimen/_4sdp"
                        style="@style/boldBlack14"
                        android:layout_below="@id/fromTxt"
                        android:layout_toEndOf="@id/icon_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0909090909"/>
                </RelativeLayout>
                <View
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/divider"/>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/icon_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_location_on_24_blue"/>
                    <TextView
                        style="@style/regularBlack14"
                        android:id="@+id/toTxt"
                        android:layout_toEndOf="@id/icon_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dia_chi"/>
                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/txtToAddress"
                        style="@style/boldBlack14"
                        android:layout_below="@id/toTxt"
                        android:layout_toEndOf="@id/icon_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 Han Thuyen, D.1, HCM city"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/btnCloseDialog"
                    android:textSize="@dimen/_16sdp"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_24sdp"
                    app:backgroundTint="@null"
                    android:elevation="0dp"
                    android:textColor="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:text="Đóng"
                    android:background="@drawable/button_border_1a94ff_ffffff"
                    style="?android:attr/borderlessButtonStyle"
                    />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>