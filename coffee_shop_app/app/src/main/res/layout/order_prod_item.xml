<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8sdp">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:id="@+id/imageView"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_20sdp">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNameProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldBlack14" />

            <TextView
                android:id="@+id/txtSize"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: Small"
                style="@style/regularGrey12" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txtTopping"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topping: Small"
                style="@style/regularGrey12" />

            <TextView
                android:id="@+id/txtPrice_quantity"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="69.000 â‚« x 1"
                style="@style/regularGrey12" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txtNote"
                android:layout_marginTop="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square_amount_box"
                style="@style/regularGrey12" />
        </LinearLayout>
    </RelativeLayout>
</layout>