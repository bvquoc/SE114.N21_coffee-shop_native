<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.coffee_shop_app.viewmodels.CartButtonViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_design">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_12sdp">
            <ImageView
                android:id="@+id/close_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_clear_24"
                android:layout_marginEnd="@dimen/_16sdp"/>
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn phương thức mua hàng"
                style="@style/boldBlack16"
                android:textAlignment="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey_border"/>
        <LinearLayout
            android:id="@+id/delivery_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:background="@{viewModel.delivering?@color/blueBackground:@color/white}">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:src="@drawable/img_delivery_small_icon"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_12sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng đến"
                    style="@style/boldBlack14"
                    android:layout_marginBottom="@dimen/_2sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.userAddress}"
                    style="@style/regularGrey14"
                    android:layout_marginBottom="@dimen/_2sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.nameReceiver}"
                        android:maxLines="1"
                        android:ellipsize="end"
                        style="@style/regularBlack14"
                        android:layout_marginRight="@dimen/_2sdp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="none"
                        android:text="@{viewModel.phone}"
                        style="@style/regularBlack14"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/delivery_edit_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAppearance="@style/regularWhite16"
                app:shapeAppearanceOverlay="@style/roundButtonShape"
                android:stateListAnimator="@null"
                android:text="Sửa"
                android:layout_gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey_border"/>

        <LinearLayout
            android:id="@+id/pick_up_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:background="@{viewModel.delivering?@color/white:@color/blueBackground}">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:src="@drawable/img_pickup_small_icon"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_12sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tới lấy tại"
                    style="@style/boldBlack14"
                    android:layout_marginBottom="@dimen/_2sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.storeAddress}"
                    style="@style/regularGrey14"
                    android:layout_marginBottom="@dimen/_2sdp"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@{viewModel.distanceString}"
                   android:maxLines="1"
                   android:ellipsize="end"
                   style="@style/regularBlack14"/>
            </LinearLayout>
            <Button
                android:id="@+id/pick_up_edit_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAppearance="@style/regularWhite16"
                app:shapeAppearanceOverlay="@style/roundButtonShape"
                android:stateListAnimator="@null"
                android:text="Sửa"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</layout>
