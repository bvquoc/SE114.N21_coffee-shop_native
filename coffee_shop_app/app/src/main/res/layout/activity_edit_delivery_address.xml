<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    tools:context=".activities.EditDeliveryAddressActivity">
    <!-- Include the custom toolbar here -->
    <include
        layout="@layout/custom_toolbar"
        android:id="@+id/my_toolbar" />
    <!-- Add any other views for the activity here -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        app:layout_constraintBottom_toTopOf="@id/save_button_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:scrollbarStyle="outsideInset"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <LinearLayout
            android:id="@+id/address_delivery_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:layout_marginVertical="16dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/border_ffffff_8"
            android:orientation="vertical">
            <Button
                android:id="@+id/temp_view"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Address"
                style="@style/boldBlack14"/>
            <EditText
                android:id="@+id/address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                style="@style/regularBlack14"
                android:hint="Lot number, street name"
                android:inputType="textAutoComplete"
                android:background="@drawable/border_edit_text"
                android:layout_marginBottom="16dp"
                android:textCursorDrawable="@color/blue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginBottom="4dp"
                style="@style/boldBlack14"/>
            <AutoCompleteTextView
                android:id="@+id/city_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingVertical="8dp"
                android:completionThreshold="1"
                android:hint="Select city"
                android:inputType="text"
                android:dropDownHeight="150dp"
                android:maxLines="1"
                android:textCursorDrawable="@color/blue"
                style="@style/regularBlack14"
                android:popupBackground="@color/white"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_autocomplete_text_view_frame"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District"
                style="@style/boldBlack14"
                android:layout_marginBottom="4dp"/>
            <AutoCompleteTextView
                android:id="@+id/district_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingVertical="8dp"
                android:completionThreshold="1"
                android:hint="Select district"
                android:dropDownHeight="150dp"
                style="@style/regularBlack14"
                android:inputType="text"
                android:textCursorDrawable="@color/blue"
                android:maxLines="1"
                android:popupBackground="@color/white"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_autocomplete_text_view_frame"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ward"
                android:layout_marginBottom="4dp"
                style="@style/boldBlack14"/>
            <AutoCompleteTextView
                android:id="@+id/ward_auto_complete_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingVertical="8dp"
                android:completionThreshold="1"
                android:hint="Select ward"
                android:dropDownHeight="150dp"
                android:maxLines="1"
                android:inputType="text"
                android:textCursorDrawable="@color/blue"
                style="@style/regularBlack14"
                android:popupBackground="@color/white"
                android:layout_marginBottom="16dp"
                android:background="@drawable/border_autocomplete_text_view_frame"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipient’s name"
                style="@style/boldBlack14"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                style="@style/regularBlack14"
                android:hint="E.g Nguyen Van A"
                android:inputType="textPersonName"
                android:background="@drawable/border_edit_text"
                android:layout_marginBottom="16dp"
                android:textCursorDrawable="@color/blue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recipient’s phone number"
                android:layout_marginBottom="4dp"
                style="@style/boldBlack14"/>
            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                style="@style/regularBlack14"
                android:hint="11-digit phone number"
                android:maxLength="11"
                android:inputType="phone"
                android:background="@drawable/border_edit_text"
                android:textCursorDrawable="@color/blue"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/save_button_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/white"
        app:layout_constraintVertical_chainStyle="packed">
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Save"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="16dp"
            android:lineSpacingMultiplier="1.5"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_border_none_1a94ff"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>