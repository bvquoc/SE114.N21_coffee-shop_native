<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.coffee_shop_app.viewmodels.EditDeliveryAddressViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        tools:context=".activities.address.EditDeliveryAddressActivity">
        <!-- Include the custom toolbar here -->
        <include
            layout="@layout/custom_toolbar"
            android:id="@+id/my_toolbar" />
        <!-- Add any other views for the activity here -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintBottom_toTopOf="@id/save_button_frame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scrollbarStyle="outsideInset"
            android:focusableInTouchMode="true"
            android:focusable="true">
            <LinearLayout
                android:id="@+id/address_delivery_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_16sdp"
                android:layout_marginVertical="@dimen/_16sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/border_ffffff_8"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address_edit_text_frame"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusTopStart="4dp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/regularRed14"
                        app:hintTextAppearance="@style/regularBlue14"
                        android:layout_weight="1">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/address_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="0dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:hint="Địa chỉ"
                            android:textAppearance="@style/regularBlack14"
                            android:text="@{viewModel.formattedAddress}"
                            android:enabled="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:id="@+id/address_picker_button"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:minWidth="0dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Chọn"
                        android:textAppearance="@style/regularBlue14"/>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_edit_text_frame"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/regularRed14"
                    app:hintTextAppearance="@style/regularBlue14">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Tên người nhận"
                        android:textAppearance="@style/regularBlack14"
                        android:text="@{viewModel.nameReceiver}"
                        android:maxLength="200"
                        android:onTextChanged="@{viewModel::onNameReceiverChanged}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_edit_text_frame"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/regularRed14"
                    app:hintTextAppearance="@style/regularBlue14">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:hint="Số điện thoại"
                        android:textAppearance="@style/regularBlack14"
                        android:text="@{viewModel.phone}"
                        android:maxLength="10"
                        android:onTextChanged="@{viewModel::onPhoneChanged}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/address_note_edit_text_frame"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/regularRed14"
                    app:hintTextAppearance="@style/regularBlue14"
                    app:counterMaxLength="200"
                    app:counterEnabled="true"
                    app:counterTextAppearance="@style/regularGrey14">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/address_note_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:inputType="textMultiLine"
                        android:hint="Ghi chú"
                        android:textAppearance="@style/regularBlack14"
                        android:text="@{viewModel.addressNote}"
                        android:maxLength="200"
                        android:onTextChanged="@{viewModel::onAddressNoteChanged}"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/save_button_frame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@color/white"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="@{viewModel.keyBoardShow?View.GONE:View.VISIBLE}">
            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Lưu"
                android:textAppearance="@style/regularWhite16"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_border_none_1a94ff"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlur30"
            android:visibility="@{viewModel.updatingAddress?View.VISIBLE:View.GONE}">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">
                <ProgressBar
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
