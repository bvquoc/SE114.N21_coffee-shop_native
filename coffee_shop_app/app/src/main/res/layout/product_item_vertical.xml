<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="230dp"
    android:padding="8dp"
    android:background="@drawable/border_ffffff_8_808089">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_image_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/product_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/product_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="115dp"
            android:layout_height="115dp"/>
        <ImageView
            android:id="@+id/status_new"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_new_frame"
            android:layout_width="115dp"
            android:layout_height="115dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/product_info_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8dp"
                android:autoSizeMaxTextSize="14dp"
                android:ellipsize="end"
                style="@style/boldBlack14"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="6dp"
                android:maxLines="1"
                style="@style/regularBlack14"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:textAllCaps="false"
            android:text="Buy"
            android:textColor="@color/blue"
            android:fontFamily="@font/inter_bold"
            android:textSize="14dp"
            android:lineSpacingMultiplier="1.5"
            android:elevation="0dp"
            android:background="@drawable/button_border_none_4_cee8ff"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

