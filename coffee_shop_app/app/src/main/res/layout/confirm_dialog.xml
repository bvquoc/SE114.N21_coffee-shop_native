<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    android:layout_marginHorizontal="32dp"
    android:background="@drawable/border_ffffff_8">
    <TextView
        android:id="@+id/title_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/boldBlack18"
        android:text="Title"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:id="@+id/content_text_view"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        app:layout_constraintBottom_toTopOf="@id/button_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/regularBlack14"
        android:textAlignment="center"
        android:text="content"/>
    <LinearLayout
        android:id="@+id/button_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/content_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yes_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="Yes"
            android:textColor="@color/blue"
            android:fontFamily="@font/inter_regular"
            android:textSize="16dp"
            android:lineSpacingMultiplier="1.5"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_border_1a94ff_ffffff"/>
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/no_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="No"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="16dp"
            android:lineSpacingMultiplier="1.5"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_border_none_1a94ff"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>