<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingVertical="24dp"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/baseline_location_on_24_blue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            style="@style/regularBlack14"
                            android:id="@+id/fromTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cửa hàng mang đi" />

                        <TextView
                            android:id="@+id/txtPickupStore"
                            android:layout_marginTop="@dimen/_4sdp"
                            style="@style/boldBlack14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13 Han Thuyen, D.1, HCM city" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/icon_store_chevron"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/baseline_chevron_right_24"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <View
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:id="@+id/icon_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_access_time_filled_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            style="@style/regularBlack14"
                            android:id="@+id/toTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian mang đi" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:id="@+id/txtPickupTime"
                            style="@style/boldBlack14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00, Today" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnPickTime"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/baseline_chevron_right_24"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>