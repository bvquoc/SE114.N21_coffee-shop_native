<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_design">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_clear_24"
            android:layout_margin="@dimen/_16sdp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/promo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giảm 50% dơn 40,000"
        style="@style/mediumBlack16"
        android:textAlignment="center"
        android:ellipsize="end"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@color/grey_border"/>
    <ImageView
        android:id="@+id/promo_qr"
        android:layout_width="@dimen/_108sdp"
        android:layout_height="@dimen/_108sdp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/promo_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="PROMOCODE"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/_4sdp"
        style="@style/regularBlack16"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/status_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/status_text_view"
            style="@style/regularGrey12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_4sdp"/>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/use_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Sử dụng ngay"
        android:textAppearance="@style/regularWhite16"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/button_border_none_1a94ff"
        android:layout_marginVertical="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_4sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:background="@color/grey_border"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_16sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày hết hạn: "
            style="@style/regularBlack14"/>
        <TextView
            android:id="@+id/promo_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            style="@style/regularBlack14"
            android:textAlignment="viewEnd"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_6sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá trị đơn hàng tối thiểu: "
            style="@style/regularBlack14"/>
        <TextView
            android:id="@+id/promo_min_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            style="@style/regularBlack14"
            android:textAlignment="viewEnd"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_6sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm giá tối đa: "
            style="@style/regularBlack14"/>
        <TextView
            android:id="@+id/promo_max_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            style="@style/regularBlack14"
            android:textAlignment="viewEnd"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:background="@color/grey_border" />
    <TextView
        android:id="@+id/promo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/regularBlack14"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"/>
</LinearLayout>