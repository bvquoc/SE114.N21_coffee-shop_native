<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/image_order_type">
            <Layout
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="20dp"/>
        </Constraint>
        <Constraint android:id="@id/text_order_type">
            <Layout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_order_type"
                app:layout_constraintRight_toRightOf="parent"/>
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
        </Constraint>
        <Constraint
            android:id="@id/address_text_view">
            <Layout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/image_order_type">
            <Layout
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/address_text_view"
                android:layout_marginBottom="0dp"/>
        </Constraint>
        <Constraint android:id="@id/text_order_type">
            <Layout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_order_type"
                app:layout_constraintRight_toRightOf="parent"/>
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
        </Constraint>
        <Constraint
            android:id="@id/address_text_view">
            <Layout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintLeft_toRightOf="@id/image_order_type"/>
        </Constraint>
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/address_info_motion_layout"
            app:touchAnchorSide="top"/>

    </Transition>
</MotionScene>