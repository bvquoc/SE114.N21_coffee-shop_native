<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.coffee_shop_staff_admin.viewmodels.NotificationViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.NotificationActivity">
        <!-- Include the custom toolbar here -->
        <include
            layout="@layout/custom_toolbar"
            android:id="@+id/my_toolbar"/>
        <!-- Add any other views for the activity here -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintBottom_toTopOf="@id/button_frame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scrollbarStyle="outsideInset"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:background="@color/background">
            <LinearLayout
                android:id="@+id/info_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_16sdp"
                android:layout_marginVertical="@dimen/_16sdp"
                android:paddingHorizontal="@dimen/_16sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:background="@drawable/border_ffffff_8"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:scaleType="fitXY"
                    android:visibility="@{viewModel.hasImage?View.VISIBLE:View.GONE}"/>
                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_image_24"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:visibility="@{viewModel.hasImage?View.GONE:View.VISIBLE}"/>
                <Button
                    android:id="@+id/choose_image_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Chọn hình ảnh"
                    android:textAppearance="@style/regularWhite16"
                    android:stateListAnimator="@null"
                    app:shapeAppearanceOverlay="@style/roundButtonShape"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_16sdp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/title_edit_text_frame"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/regularRed14"
                    app:hintTextAppearance="@style/regularBlue14"
                    app:counterTextAppearance="@style/regularGrey14"
                    app:counterEnabled="true"
                    app:counterMaxLength="50">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/title_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:hint="Tên"
                        android:textAppearance="@style/regularBlack14"
                        android:text="@{viewModel.title}"
                        android:maxLength="50"
                        android:onTextChanged="@{viewModel::onTitleChanged}"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/content_edit_text_frame"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomEnd="4dp"
                    app:boxCornerRadiusBottomStart="4dp"
                    app:boxCornerRadiusTopEnd="4dp"
                    app:boxCornerRadiusTopStart="4dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/regularRed14"
                    app:hintTextAppearance="@style/regularBlue14"
                    app:counterMaxLength="200"
                    app:counterEnabled="true"
                    app:counterTextAppearance="@style/regularGrey14">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/content_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:inputType="textMultiLine"
                        android:hint="Nội dung"
                        android:textAppearance="@style/regularBlack14"
                        android:text="@{viewModel.content}"
                        android:maxLength="200"
                        android:onTextChanged="@{viewModel::onContentChanged}"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/button_frame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@color/white"
            app:layout_constraintVertical_chainStyle="packed"
            android:visibility="@{viewModel.keyBoardShow?View.GONE:View.VISIBLE}">
            <Button
                android:id="@+id/button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textAppearance="@style/regularWhite16"
                app:shapeAppearanceOverlay="@style/roundButtonShape"
                android:stateListAnimator="@null"
                android:text="Lưu"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlur30"
            android:visibility="@{viewModel.loading?View.VISIBLE:View.GONE}">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">
                <ProgressBar
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>