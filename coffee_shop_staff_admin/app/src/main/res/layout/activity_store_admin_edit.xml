<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.coffee_shop_staff_admin.viewmodels.StoreAdminEditViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.StoreAdminEditActivity">
        <!-- Include the custom toolbar here -->
        <include
            layout="@layout/custom_toolbar"
            android:id="@+id/my_toolbar"/>
        <!-- Add any other views for the activity here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scrollbarStyle="outsideInset"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:background="@color/background">
                <LinearLayout
                    android:id="@+id/info_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Thông tin cơ bản" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/name_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/name_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:hint="Tên"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.name}"
                                    android:maxLength="200"
                                    android:onTextChanged="@{viewModel::onNameChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/phone_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/phone_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="phone"
                                    android:hint="Số điện thoại"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.phone}"
                                    android:maxLength="10"
                                    android:onTextChanged="@{viewModel::onPhoneChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Khung giờ hoạt động" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/open_time_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/open_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="1"
                                        android:inputType="none"
                                        android:hint="Giờ mở cửa"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.openTimeString}"
                                        android:enabled="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/open_time_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/close_time_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/close_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="1"
                                        android:inputType="none"
                                        android:hint="Giờ đóng cửa"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.closeTimeString}"
                                        android:enabled="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/close_time_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Địa chỉ" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/address_location_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/address_location_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="2"
                                        android:inputType="textMultiLine"
                                        android:hint="Vị trí"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.latLng}"
                                        android:enabled="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/address_location_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/address_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/address_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:hint="Địa chỉ"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.address}"
                                    android:maxLength="200"
                                    android:onTextChanged="@{viewModel::onAddressChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Hình ảnh" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/image_recycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"/>

                            <Button
                                android:id="@+id/add_image_button"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/_16sdp"
                                android:minWidth="0dp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:text="Thêm"
                                android:textAppearance="@style/regularBlue14"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:id="@+id/button_frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:background="@color/white"
                app:layout_constraintVertical_chainStyle="packed"
                android:visibility="@{viewModel.keyBoardShow?View.GONE:View.VISIBLE}">
                <Button
                    android:id="@+id/button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/regularWhite16"
                    app:shapeAppearanceOverlay="@style/roundButtonShape"
                    android:stateListAnimator="@null"
                    android:text="@{viewModel.buttonText}"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlur30"
            android:visibility="@{viewModel.loading?View.VISIBLE:View.GONE}">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">
                <ProgressBar
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


