<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.coffee_shop_staff_admin.viewmodels.PromoAdminEditViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PromoAdminEditActivity">
        <!-- Include the custom toolbar here -->
        <include
            layout="@layout/custom_toolbar"
            android:id="@+id/my_toolbar"/>
        <!-- Add any other views for the activity here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{viewModel.loading?View.GONE:View.VISIBLE}">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scrollbarStyle="outsideInset"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:background="@color/background">
                <LinearLayout
                    android:id="@+id/info_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Thông tin cơ bản" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/promo_code_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14"
                                app:counterEnabled="true"
                                app:counterMaxLength="20"
                                app:counterTextAppearance="@style/regularGrey14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/promo_code_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:hint="Mã"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.promoCode}"
                                    android:maxLength="20"
                                    android:focusable="@{viewModel.canEditPromoCode}"
                                    android:focusableInTouchMode="@{viewModel.canEditPromoCode}"
                                    android:onTextChanged="@{viewModel::onPromoCodeChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/percent_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14"
                                app:suffixText="%"
                                app:suffixTextAppearance="@style/regularGrey14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/percent_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="number"
                                    android:hint="Phần trăm giảm"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.percent}"
                                    android:maxLength="3"
                                    android:onTextChanged="@{viewModel::onPercentChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/min_price_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14"
                                app:suffixText="VND"
                                app:suffixTextAppearance="@style/regularGrey14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/min_price_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="number"
                                    android:hint="Giá trị đơn hàng tối thiểu"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.minPrice}"
                                    android:maxLength="200"
                                    android:onTextChanged="@{viewModel::onMinPriceChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/max_price_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14"
                                app:suffixText="VND"
                                app:suffixTextAppearance="@style/regularGrey14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/max_price_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:maxLines="1"
                                    android:inputType="number"
                                    android:hint="Giảm tối đa"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.maxPrice}"
                                    android:maxLength="200"
                                    android:onTextChanged="@{viewModel::onMaxPriceChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/description_edit_text_frame"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxCornerRadiusBottomEnd="4dp"
                                app:boxCornerRadiusBottomStart="4dp"
                                app:boxCornerRadiusTopEnd="4dp"
                                app:boxCornerRadiusTopStart="4dp"
                                app:errorEnabled="true"
                                app:errorTextAppearance="@style/regularRed14"
                                app:hintTextAppearance="@style/regularBlue14"
                                app:counterMaxLength="500"
                                app:counterEnabled="true"
                                app:counterTextAppearance="@style/regularGrey14">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/description_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="0dp"
                                    android:inputType="textMultiLine"
                                    android:hint="Mô tả"
                                    android:textAppearance="@style/regularBlack14"
                                    android:text="@{viewModel.description}"
                                    android:maxLength="500"
                                    android:onTextChanged="@{viewModel::onDescriptionChanged}"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dành cho khách hàng mới: "
                                    style="@style/regularBlack14"
                                    android:layout_gravity="center_vertical"/>
                                <CheckBox
                                    android:id="@+id/check_box"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="@{viewModel.forNewCustomerValue}"
                                    android:onCheckedChanged="@{viewModel::onForNewCustomerValueChanged}"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Thời điểm bắt đầu" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/start_date_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/start_date_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="1"
                                        android:inputType="none"
                                        android:hint="Ngày bắt đầu"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.startDateString}"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/start_date_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/start_time_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/start_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="1"
                                        android:inputType="none"
                                        android:hint="Giờ bắt đầu"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.startTimeString}"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/start_time_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:text="Thời điểm kết thúc" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/close_date_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/close_date_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="1"
                                        android:inputType="none"
                                        android:hint="Ngày kết thúc"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.closeDateString}"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/close_date_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/close_time_edit_text_frame"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:boxCornerRadiusBottomEnd="4dp"
                                    app:boxCornerRadiusBottomStart="4dp"
                                    app:boxCornerRadiusTopEnd="4dp"
                                    app:boxCornerRadiusTopStart="4dp"
                                    app:errorEnabled="true"
                                    app:errorTextAppearance="@style/regularRed14"
                                    app:hintTextAppearance="@style/regularBlue14"
                                    android:layout_weight="1">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/close_time_edit_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="0dp"
                                        android:maxLines="1"
                                        android:inputType="none"
                                        android:hint="Giờ kết thúc"
                                        android:textAppearance="@style/regularBlack14"
                                        android:text="@{viewModel.closeTimeString}"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"/>
                                </com.google.android.material.textfield.TextInputLayout>
                                <Button
                                    android:id="@+id/close_time_picker_button"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/edit_text_frame"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingHorizontal="@dimen/_16sdp"
                                    android:minWidth="0dp"
                                    style="@style/Widget.MaterialComponents.Button.TextButton"
                                    android:text="Chọn"
                                    android:textAppearance="@style/regularBlue14"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cửa hàng áp dụng" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerStore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:id="@+id/button_frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:background="@color/white"
                app:layout_constraintVertical_chainStyle="packed"
                android:visibility="@{viewModel.keyBoardShow?View.GONE:View.VISIBLE}">
                <Button
                    android:id="@+id/button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/regularWhite16"
                    app:shapeAppearanceOverlay="@style/roundButtonShape"
                    android:stateListAnimator="@null"
                    android:text="@{viewModel.buttonText}"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:duration="500"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:visibility="@{viewModel.loading?View.VISIBLE:View.GONE}">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/edit_item_skeleton" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlur30"
            android:visibility="@{viewModel.updating?View.VISIBLE:View.GONE}">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">
                <ProgressBar
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
