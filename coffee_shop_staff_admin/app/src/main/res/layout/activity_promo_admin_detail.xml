<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.coffee_shop_staff_admin.viewmodels.PromoAdminDetailViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PromoAdminDetailActivity">
        <!-- Include the custom toolbar here -->
        <include
            layout="@layout/custom_toolbar"
            android:id="@+id/my_toolbar"/>
        <!-- Add any other views for the activity here -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            android:visibility="@{!(viewModel.loadingPromo || viewModel.loadingStore)?View.VISIBLE:View.GONE}">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/button_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/background"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        app:cardElevation="0dp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_16sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">
                            <ImageView
                                android:id="@+id/promo_qr"
                                android:layout_width="@dimen/_108sdp"
                                android:layout_height="@dimen/_108sdp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/promo_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:text="@{viewModel.code}"
                                android:textAlignment="center"
                                style="@style/regularBlack16"
                                android:layout_marginBottom="@dimen/_8sdp"/>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/status_card_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardBackgroundColor="@{viewModel.forNewCustomer?@color/blueBackground:@color/grey_border}"
                                android:layout_marginBottom="@dimen/_16sdp"
                                app:cardElevation="0dp"
                                android:layout_gravity="center">
                                <TextView
                                    android:id="@+id/status_text_view"
                                    style="@style/regularGrey14"
                                    android:textColor="@{viewModel.forNewCustomer?@color/blue:@color/grey_text}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_12sdp"
                                    android:layout_marginVertical="@dimen/_4sdp"
                                    android:text="@{viewModel.statusText}"/>
                            </androidx.cardview.widget.CardView>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginBottom="@dimen/_6sdp"
                                android:background="@color/grey_border"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày bắt đầu: "
                                    style="@style/regularBlack14"/>
                                <TextView
                                    android:id="@+id/promo_date_start"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_weight="1"
                                    style="@style/regularBlack14"
                                    android:textAlignment="viewEnd"
                                    android:text="@{viewModel.dateStart}"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_6sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ngày hết hạn: "
                                    style="@style/regularBlack14"/>
                                <TextView
                                    android:id="@+id/promo_date_end"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_weight="1"
                                    style="@style/regularBlack14"
                                    android:textAlignment="viewEnd"
                                    android:text="@{viewModel.dateEnd}"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_6sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giá trị đơn hàng tối thiểu: "
                                    style="@style/regularBlack14"/>
                                <TextView
                                    android:id="@+id/promo_min_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_weight="1"
                                    style="@style/regularBlack14"
                                    android:textAlignment="viewEnd"
                                    android:text="@{viewModel.minPrice}"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_6sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giảm giá tối đa: "
                                    style="@style/regularBlack14"/>
                                <TextView
                                    android:id="@+id/promo_max_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_weight="1"
                                    style="@style/regularBlack14"
                                    android:textAlignment="viewEnd"
                                    android:text="@{viewModel.maxPrice}"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:background="@color/grey_border" />
                            <TextView
                                android:id="@+id/promo_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/regularBlack14"
                                android:layout_marginBottom="@dimen/_16sdp"
                                android:text="@{viewModel.description}"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!--Stores-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginVertical="@dimen/_16sdp"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_16sdp">

                            <TextView
                                style="@style/boldBlack16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cửa hàng áp dụng" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerStore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:id="@+id/button_frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:background="@color/white"
                app:layout_constraintVertical_chainStyle="packed"
                android:orientation="horizontal"
                android:visibility="@{!(viewModel.loadingPromo || viewModel.loadingStore)?View.VISIBLE:View.GONE}">
                <Button
                    android:id="@+id/edit_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/regularWhite16"
                    app:shapeAppearanceOverlay="@style/roundButtonShape"
                    android:drawableLeft="@drawable/ic_edit_white_24"
                    android:stateListAnimator="@null"
                    android:enabled="@{viewModel.canEdit}"
                    android:text="Chỉnh"/>
                <View
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/delete_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textAppearance="@style/regularWhite16"
                    android:drawableLeft="@drawable/ic_clear_white_24"
                    app:shapeAppearanceOverlay="@style/roundButtonShape"
                    android:backgroundTint="@color/red"
                    android:stateListAnimator="@null"
                    android:text="Xóa"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:duration="500"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:visibility="@{(viewModel.loadingPromo || viewModel.loadingStore)?View.VISIBLE:View.GONE}">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/product_admin_detail_skeleton" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackBlur30"
            android:visibility="@{viewModel.updating?View.VISIBLE:View.GONE}">
            <androidx.cardview.widget.CardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">
                <ProgressBar
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
